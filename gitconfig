[user]
	email = matt@schickm.com
	name = Matt Schick
[push]
	default = current
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[alias]
	cam = commit -am
	cm = commit -m
	co = checkout
	cp = commit --patch
	c = commit
	st = status --short
	log = log --graph --decorate
[core]
    editor = kak -e 'execute-keys -with-hooks A'
	excludesfile = ~/.gitignore_global
[colors]
	ui = true
[difftool "kdiff3"]
    trustExitCode = false
[mergetool "kdiff3"]
    trustExitCode = false
    cmd = kdiff3 $BASE $LOCAL $REMOTE -o $MERGED
[mergetool]
    keepBackup = false
[merge]
	tool = kdiff3
[diff]
    tool = kdiff3

[tig]
    line-graphics = utf-8
    refresh-mode = auto
    mouse = true
[rerere]
	enabled = true
